# Configuration IMAP pour Thunderbird
IMAP_HOST=mail.sitew.fr
IMAP_PORT=993
IMAP_USER=votre-email@domain.com
IMAP_PASSWORD="votre-mot-de-passe"
IMAP_TLS=true

# Configuration SMTP pour les brouillons
SMTP_HOST=mail.sitew.fr
SMTP_PORT=465
SMTP_USER=votre-email@domain.com
SMTP_PASSWORD="votre-mot-de-passe"
SMTP_SECURE=true

# Dossier des brouillons Thunderbird (IMAP)
DRAFTS_FOLDER=INBOX.Drafts

# Configuration de l'application
APP_PORT=3000
ATTACHMENTS_DIR=./attachments
OUTPUT_DIR=./output
DB_PATH=./data/price-request.db

# Options de traitement automatique
DEFAULT_RECIPIENT=procurement@multipartsci.com
RESPONSE_DEADLINE_HOURS=24
CHECK_INTERVAL_MINUTES=5
AUTO_SEND_TO_PROCUREMENT=true

# ============ EMAIL REMINDER MODULE ============
# Supplier follow-up reminder SLA (days after sent date)
REMINDER_SLA_DAYS=3

# Hour to run supplier reminders (0-23, Africa/Abidjan timezone)
REMINDER_RUN_HOUR=9

# Auto-reply throttle (hours between auto-replies to same customer for same request)
AUTO_REPLY_THROTTLE_HOURS=12

# Email address for sending ACK and auto-replies to customers
MULTIPARTS_ACK_FROM=rafiou.oyeossi@multipartsci.com

# Procurement mailbox (used to verify sent RFQs before scheduling reminders)
PROCUREMENT_SENT_MAILBOX=procurement@multipartsci.com

# Chaser classifier score threshold (0-100, default 60)
CHASER_SCORE_THRESHOLD=60

# Statuses considered "closed" (comma-separated)
CLOSED_STATUSES=CLOSED,CANCELLED,LOST,WON
